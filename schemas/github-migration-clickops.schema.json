{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/github-migration-clickops.schema.json",
  "title": "GitHub Migration ClickOps Verification Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "record_id",
    "repo",
    "category",
    "title",
    "status",
    "checks",
    "created_at"
  ],
  "properties": {
    "record_id": {
      "type": "string",
      "description": "Unique record id (uuid or slug)"
    },
    "repo": {
      "type": "object",
      "additionalProperties": false,
      "required": ["owner", "name"],
      "properties": {
        "owner": { "type": "string" },
        "name": { "type": "string" },
        "url": { "type": "string" }
      }
    },
    "pr": {
      "type": "object",
      "additionalProperties": false,
      "required": ["number"],
      "properties": {
        "number": { "type": "integer" },
        "url": { "type": "string" }
      }
    },
    "branch": { "type": "string" },
    "run_id": { "type": "string" },
    "run_url": { "type": "string" },
    "category": {
      "type": "string",
      "enum": [
        "general",
        "governance",
        "security",
        "ci",
        "issues",
        "releases",
        "wiki",
        "search",
        "evidence"
      ]
    },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "steps": {
      "type": "array",
      "items": { "type": "string" }
    },
    "expected": {
      "type": "array",
      "items": { "type": "string" }
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail", "partial", "skipped", "info"]
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["check_id", "status"],
        "properties": {
          "check_id": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail", "partial", "skipped", "info"] },
          "detail": { "type": "string" }
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "ref"],
        "properties": {
          "type": { "type": "string", "enum": ["ui", "artifact", "log", "url", "note"] },
          "ref": { "type": "string" },
          "url": { "type": "string" },
          "hash": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "approvals_required": { "type": "integer", "minimum": 0 },
    "approvals_observed": { "type": "integer", "minimum": 0 },
    "reviewers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "hitl_required": { "type": "boolean" },
    "hitl_approved_by": { "type": "string" },
    "hitl_approved_at": { "type": "string", "format": "date-time" },
    "sensitivity": {
      "type": "string",
      "enum": ["public", "internal", "private", "secret"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "notes": { "type": "string" }
  }
}
