{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:cognitive-suite:knowledge:decision",
  "title": "Decision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "ts",
    "status",
    "context",
    "decision",
    "consequences"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "proposed",
        "accepted",
        "deprecated",
        "superseded"
      ]
    },
    "context": {
      "type": "string"
    },
    "decision": {
      "type": "string"
    },
    "consequences": {
      "type": "string"
    },
    "refs": {
      "type": "array",
      "items": {
        "$ref": "source.schema.json"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
