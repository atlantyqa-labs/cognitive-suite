{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:cognitive-suite:knowledge:activity-event",
  "title": "Activity Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "ts",
    "event_type",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "commit",
        "push",
        "ci_fail",
        "ci_fix",
        "docs_publish",
        "bundle_patch",
        "decision"
      ]
    },
    "summary": {
      "type": "string"
    },
    "refs": {
      "type": "array",
      "items": {
        "$ref": "source.schema.json"
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
